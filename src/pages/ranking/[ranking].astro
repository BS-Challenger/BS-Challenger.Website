---
import Layout from "../../layouts/Layout.astro";
import LevelCard from "../../components/LevelCard.astro";
const { ranking } = Astro.params;

let response = await fetch("https://bschallenger.xyz/api/rankings");
let rankings = await response.json();

let rankingObj = rankings.find(r => r.identifier == ranking);

console.log(rankingObj.identifier);
---

<Layout title={rankingObj.name}>
    <main>
        <div class="rankingsContainer">
            <div class="infoContainer">
                <img class="rankingImage" src={rankingObj.iconURL} transition:name={`${rankingObj.identifier}`}/>
                <p class="rankingName">{rankingObj.name}</p>
                <LevelCard level={{
                    levelNumber: 2,
                    iconURL: '/Default.png',
                    color0 : '#249D76',
                    color1 : '#217a5e'
                }} />
            </div>
        </div>
    </main>
</Layout>

<style>
    .rankingsContainer  {
        position: fixed;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        min-width: 300px;
        width: 55%;
        height: 75%;
        background-color: #151515;
        box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.25);
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .infoContainer {
        display: flex;

        margin-top: 15px;
        width: 97%;
        height: 240px;

        border-radius: 15px;
        background: #1B1B1B;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

        margin-left: auto;
        margin-right: auto;
    }

    .rankingImage {
        display: flex;
        width: 210px;
        height: 210px;
        border-radius: 20px;

        margin-top: auto;
        margin-bottom: auto;
        margin-left: 15px;
    }

    .rankingName {
        color: #FFF;
        text-align: center;
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        font-family: Lato, sans-serif;
        font-size: 50px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        margin: 20px auto auto 20px;
    }
</style>