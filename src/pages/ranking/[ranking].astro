---
import Layout from "../../layouts/Layout.astro";
import LevelCard from "../../components/LevelCard.astro";
import LargeLevelCard from "../../components/LargeLevelCard.astro";
import LevelInfo from "../../components/LevelInfo.astro";
const { ranking } = Astro.params;

let response = await fetch("https://bschallenger.xyz/api/rankings");
let rankings = await response.json();

let rankingObj = rankings.find(r => r.identifier == ranking);

console.log(rankingObj.identifier);
---

<Layout title={rankingObj.name}>
    <main>
        <div class="rankingsContainer">
            <div class="infoContainer">
                <div class="leftInfo">
                    <img class="rankingImage" src={rankingObj.iconURL} transition:name={`${rankingObj.identifier}`}/>
                    <p class="rankingName">{rankingObj.name}</p>
                </div>
                <div class="rightInfo">
                    <p class="currentLevel">Your Level</p>
                    <LargeLevelCard level={{
                        levelNumber: 1,
                        iconURL: '/Default.png',
                        color0 : '#249D76',
                        color1 : '#217a5e'
                    }} />
                </div>
            </div>
            <div class="levelContainer">
                <LevelCard level={{
                    levelNumber: 1,
                    iconURL: '/Default.png',
                    color0 : '#249D76',
                    color1 : '#217a5e'
                }} />
                <LevelCard level={{
                    levelNumber: 2,
                    iconURL: '/Default.png',
                    color0 : '#249D76',
                    color1 : '#217a5e'
                }} />
                <LevelCard level={{
